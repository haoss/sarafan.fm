doctype

html(lang="ru")
  
  -var active = 'Главная - экран 3' //активный пункт меню, список в header.jade
  -var pageTitle = 'Главная - экран 3' + ' - Sarafan.fm' //title страницы для генерации верстки  
  -var uc = 'Логин'

  include ./_include/_head

  body
    
    // Preloader
    include ./_include/_preloader
    
    include ./_include/_header
    
    .content
      .container
        
        .screen
          .screen__three
            form(action="#")
              
              .screen__three-block
                .form-group
                  input(type="tel" placeholder="+1 (123) 456-78-91" value="+7 987 654 3210" readonly).form-control.intlTelInput
                
                .form-group.form-group--sms
                  img(src="./img/sms.png", alt="")
                  label Введите код подтверждения из смс
                    a(href="#!")
                      +icon4
                    a(href="#!")
                      +icon5
                  .form-group__code
                    div
                      input(type="tel" maxlength="1" min="0" max="9" value="7" readonly).form-control.onlyNumber
                    div
                      input(type="tel" maxlength="1" min="0" max="9" value="2" readonly).form-control.onlyNumber
                    div
                      input(type="tel" maxlength="1" min="0" max="9" value="1" readonly).form-control.onlyNumber
                    div
                      input(type="tel" maxlength="1" min="0" max="9" value="3" readonly).form-control.onlyNumber
                
                .clear25
                .screen__three-pass-title Пароль
                .form-group.form-group--mb20
                  input(type="password" placeholder="Введите пароль").form-control
                .form-group
                  input(type="password" placeholder="Введите пароль еще раз").form-control
                
                .form-group 
                  button(type="button").btn.btn--blue сохранить
                    
    
    include ./_include/_footer
    
    //[if gte IE 9]
      <script src='./js/libs/html5shiv/es5-shim.min.js'>
      <script src='./js/libs/html5shiv/html5shiv.min.js'>
      <script src='./js/libs/html5shiv/html5shiv-printshiv.min.js'>
      <script src='./js/libs/html5shiv/respond.min.js'><![endif]

    // Load Scripts
    script(src="./js/libs.js")
    include ./_include/_footer-js
    script(src="./js/common.js")
    
