      .container
        
        .screen
          .screen__three
            form(action="#")
              
              .screen__three-block
                .form-group
                  input(type="text" placeholder="Ваш телефон").form-control
                
                .form-group 
                  button(type="button").btn.btn--blue Продолжить
                  p
                    small Условия пользовательского 
                      a(href="#!" target="_blank") соглашения
                    
    
    include ./_include/_footer
    
    //[if gte IE 9]
      <script src='./js/libs/html5shiv/es5-shim.min.js'>
