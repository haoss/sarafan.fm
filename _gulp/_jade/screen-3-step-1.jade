doctype

html(lang="ru")
  
  -var active = 'Главная - экран 3' //активный пункт меню, список в header.jade
  -var pageTitle = 'Главная - экран 3' + ' - Sarafan.fm' //title страницы для генерации верстки  
  -var uc = 'Логин'

  include ./_include/_head

  body
    
    // Preloader
    include ./_include/_preloader
    
    include ./_include/_header
    
    .content
      .container
        
        .screen
          .screen__wrapper.padding-106.padding-sm-60.padding-xs-0.width-m360.margin-0auto
            form(action="#")
              
              .text-center
                .form-group
                  input(type="tel" placeholder="+1 (123) 456-78-91").form-control.intlTelInput
                
                .form-group 
                  button(type="button").btn.btn--blue.margin-b15 Продолжить
                  p.nom.color-b2b7c2
                    small Условия пользовательского 
                      a(href="#!" target="_blank").color-b2b7c2 соглашения
                    
    
    include ./_include/_footer
    
    //[if gte IE 9]
      <script src='./js/libs/html5shiv/es5-shim.min.js'>
      <script src='./js/libs/html5shiv/html5shiv.min.js'>
      <script src='./js/libs/html5shiv/html5shiv-printshiv.min.js'>
      <script src='./js/libs/html5shiv/respond.min.js'><![endif]

    // Load Scripts
    script(src="./js/libs.js")
    include ./_include/_footer-js
    script(src="./js/common.js")
    
