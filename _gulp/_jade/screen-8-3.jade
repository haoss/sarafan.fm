        .screen
          .screen__wrapper.width-m360.margin-0auto
            
            .screen__profile
              img(src="./img/avatar-3-big.png", alt="")
              strong Лимов Сергей
              a(href="#!").color--blue.link.link--none +7 (963) 344 12 12
